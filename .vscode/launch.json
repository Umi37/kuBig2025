{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "디버깅: main.c",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/a.out",   // 또는 컴파일 결과 바이너리
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  